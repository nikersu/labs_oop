				"exec": [
					"// Автоматически получаем userId, если он не установлен",
					"if (!pm.collectionVariables.get('userId')) {",
					"    pm.sendRequest({",
					"        url: pm.environment.get('baseUrl') + '/api/users',",
					"        method: 'GET'",
					"    }, function (err, res) {",
					"        if (!err && res.code === 200) {",
					"            const users = res.json();",
					"            if (users && users.length > 0) {",
					"                pm.collectionVariables.set('userId', users[0].id);",
					"                pm.collectionVariables.set('username', users[0].username);",
					"            }",
					"        }",
					"    });",
					"}"
				]
			}
