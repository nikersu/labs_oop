				{
					"name": "Get User By ID",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Если userId не установлен, получаем первый доступный ID",
									"if (!pm.collectionVariables.get('userId')) {",
									"    pm.sendRequest({",
									"        url: pm.environment.get('baseUrl') + '/api/users',",
									"        method: 'GET'",
									"    }, function (err, res) {",
									"        if (!err && res.code === 200) {",
									"            const users = res.json();",
									"            if (users && users.length > 0) {",
									"                pm.collectionVariables.set('userId', users[0].id);",
									"            }",
									"        }",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200 or 404\", function () {",
									"    pm.expect([200, 404]).to.include(pm.response.code);",
									"});",
									"",
									"if (pm.response.code === 200) {",
									"    pm.test(\"Response has user fields\", function () {",
									"        const jsonData = pm.response.json();",
									"        pm.expect(jsonData).to.have.property('id');",
									"        pm.expect(jsonData).to.have.property('username');",
									"    });",
									"    ",
									"    // Сохраняем userId, если еще не установлен",
									"    if (!pm.collectionVariables.get('userId')) {",
									"        pm.collectionVariables.set('userId', pm.response.json().id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
